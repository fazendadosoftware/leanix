{
  "compilerOptions": {
    "rootDir": "../../",
    "target": "es2019",
    "module": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["../../**/*.ts"],
  "exclude": [".git", "node_modules"],
}
