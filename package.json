{
  "name": "@fazendadosoftware/leanix-projects",
  "version": "0.1.0",
  "private": true,
  "description": "Collection of projects developed for LeanIX",
  "author": {
    "name": "Paulo dos Santos",
    "email": "paulo@fazendadosoftware.com"
  },
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "lint": "eslint packages/*",
    "fix": "eslint packages/* --fix",
    "clean": "rimraf \"packages/**/dist\" \"**/*.tsbuildinfo\" \"**/*.tgz\" \"**/.temp\" \"**/.rollup.cache\"",
    "build": "npm run build:core && npm run build:plugin",
    "build:core": "npm run build -w=@fazendadosoftware/leanix-core",
    "build:plugin": "npm run build -w=@fazendadosoftware/vite-plugin-lxr",
    "dev": "npm run dev -w=@fazendadosoftware/custom-report-vite-demo",
    "test": "ava",
    "publish": "npm run clean && npm run build && npm run test && npm publish --access=public --workspaces"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "ava": "^3.15.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-define-config": "^1.0.9",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "ts-node": "^10.2.1"
  },
  "ava": {
    "files": [
      "packages/**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}